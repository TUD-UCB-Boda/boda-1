#ifdef GLSL
layout (local_size_x = __wg_sz__, local_size_y = 1, local_size_z = 1) in;
#endif
// CUCL INCLUDE gen-util.h
#ifdef GLSL
layout(set = 0, binding = 0) buffer in_buf_t{
  float in_buf[];
};

layout (set = 0, binding = 1) buffer POD
{
  uint32_t mode;
  float vi;
  %(cucl_arg_info_decls)
};


void main()
#else
// generate data to be used as input to some other op (hence why we have an argument named 'in' of type CUCL OUT).
CUCL_GLOBAL_KERNEL void %(rtc_func_name)( GASQ float * const in_buf, // CUCL OUT_DYN img:chan:y:x
                                          uint32_t const mode, // CUCL IN :
                                          float const vi // CUCL IN :
                                          %(cucl_arg_info_decls) )
#endif					  
{
  // CUCL IX GLOB_ID_1D in_buf
  if( GLOB_ID_1D >= %(in_buf_dims_prod) ) { return; }
  float val = %(vi); 
  if( %(mode) == 2 ) { val += %(GLOB_ID_1D_x); }
  if( %(mode) == 3 ) { val += %(GLOB_ID_1D_y); }
  else if( %(mode) == 4 ) { 
    if( (%(GLOB_ID_1D_x)==%(in_buf_x_dim)/2) && (%(GLOB_ID_1D_y)==%(in_buf_y_dim)/2) ) { val += 1.0f; }
  } else if( %(mode) == 5 ) {
    val += det_hash_rand( GLOB_ID_1D + 234234567 );
  }
  in_buf[GLOB_ID_1D] = val;
}
