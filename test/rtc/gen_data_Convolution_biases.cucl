void main()
#else
CUCL_GLOBAL_KERNEL void %(rtc_func_name)( uint32_t const mode, // CUCL IN :
                                          float const vi, // CUCL IN :
                                          GASQ float * const biases // CUCL OUT_DYN out_chan
                                          %(cucl_arg_info_decls) )
