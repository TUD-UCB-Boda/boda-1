{
  // CUCL IX GLOB_ID_1D biases
  if( GLOB_ID_1D >= %(biases_dims_prod) ) { return; }
  float val = %(vi); 
  if( %(mode) == 5 ) {
    val += det_hash_rand( GLOB_ID_1D + 39475612 );
  }
  biases[GLOB_ID_1D] = val;
}
